doctype html
html
    head
        title Emplyoee Managament | Harsh Bhatia
        link(href='css/bootstrap.min.css' rel='stylesheet')
    body.container(ng-app="EmApp" ng-controller="SimpleController")
        h1 Employee Management System
        h2 Employee List
        a.btn.btn-primary.btn-large.pull-right
            i.icon-search.icon-white
            |Add New Employee
        table.table.table-striped
            thead
                tr
                    th Name
                    th Email
                    th Username
                    //th Password
                tr
            tbody
                tr(ng-repeat="person in persons")
                    td {{person.name}}
                    td {{person.email}}
                    td {{person.username}}
                    //td {{person.password}}
                    td
                        button.edit.btn-primary.btn
                            i.icon-user.icon-white
                            |Edit
                        button.edit.btn-danger.btn
                            i.icon-search.icon-white
                            |Delete
                tr
        h2  Add New User
        form.form-horizontal(name="newUserForm" role="form" novalidate)
            div.form-group
                label.control-label.col-sm-2 First-Name
                div.col-sm-10
                    input(type="text" name="firstname" placeholder="e.g. John" class="form-control" ng-model="NewUser.name")
                    //p(ng-show={newUserForm.firstname.$invalid && !newUserForm.firstname.$pristine})Your name is required
                br
            div.form-group
                label.control-label.col-sm-2 Email
                div.col-sm-10
                    input(type="mail" name="email" placeholder="e.g. john@abc.com" class="form-control" ng-model='NewUser.email')

                br
            div.form-group
                label.control-label.col-sm-2 Username
                div.col-sm-10
                    input(type="text" name="username" placeholder="Username" class="form-control" ng-model="NewUser.username" ng-minlength="3" ng-maxlength="5")
                    p(ng-show="newUserForm.username.$error.minlength") Username is too short.
                    p(ng-show="newUserForm.username.$error.maxlength") Username is too long.
            div.form-group
                label.control-label.col-sm-2 Password
                div.col-sm-10
                    input(type="password" name="password" placeholder="Enter Password" class="form-control" ng-model="NewUser.password")
            div.form-group
                div.col-sm-offset-2.col-sm-10
                    button.btn.btn-primary(type="submit" ng-click="SaveUser()") Save Employee
                    button.btn.btn-danger Discard
    script(src='scripts/jquery.min.js')
    script(src='scripts/angular.min.js')
    script(src='scripts/bootstrap.min.js')
    script(src='scripts/app.js')
