div.EmployeeList
            h2 Employee List
            //a.btn.btn-primary.btn-large.pull-right(href='#AddNewPerson')
            a.btn.pull-right(href="#AddPerson")
                i.glyphicon-plus.glyphicon
                | Add New Employee
            table.table.table-striped
                thead
                    tr
                        th Name
                        th Email
                        th Username
                        //th Password
                    tr
                tbody
                    tr(ng-repeat="person in persons")
                        td {{person.name}}
                        td {{person.email}}
                        td {{person.username}}
                        //td {{person.password}}
                        td
                            //a(href="#/EditPerson")
                            button.edit.btn-primary.btn
                                i.glyphicon-pencil.glyphicon
                                |   Edit
                            button.edit.btn-danger.btn
                                i.glyphicon-trash.glyphicon
                                |   Delete
                    tr